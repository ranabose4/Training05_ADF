{
	"name": "Copy_Data_DB_to_Files",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "SqlServerTable1",
						"type": "DatasetReference",
						"parameters": {
							"Schema_name": {
								"value": "@pipeline().globalParameters.Schema_Name_gbl",
								"type": "Expression"
							},
							"Table_Name": {
								"value": "@pipeline().parameters.Table_Name",
								"type": "Expression"
							},
							"Database__Name": {
								"value": "@pipeline().globalParameters.DataBase_Name",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "csv_blob",
						"type": "DatasetReference",
						"parameters": {
							"Container_name": "output",
							"file_name": {
								"value": "@pipeline().parameters.OutPut_File_Name",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"Schema_Name": {
				"type": "string"
			},
			"Table_Name": {
				"type": "string"
			},
			"OutPut_File_Name": {
				"type": "string"
			}
		},
		"folder": {
			"name": "Day3"
		},
		"annotations": []
	}
}